---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead />
		<title>Blog | AleForge</title>
	</head>
	<body>
		<div class="top-bg">
			<Header />
		</div>

		<section class="blog" id="blog-home">
			<div class="container">
				<div class="row">
					{
						posts.map((post) => (
							<div class="col col-lg-4">
								<a href={`/blog/${post.slug}/`} class="blog-box">
									<div class="blog-box-img">
										<img src={post.data.heroImage} alt="" class="responsive-img" />
									</div>
									<div class="blog-box-inner">
										<p class="blog-date">
											<FormattedDate date={post.data.pubDate} />
										</p>
										<h4 class="blog-title">{post.data.title}</h4>
										<strong class="blue">Read More &raquo;</strong>
									</div>
								</a>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<Footer />
	</body>
</html>
